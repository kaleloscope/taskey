<div class="container">
  <div class="row mt-5">
    <div class="col-md-7">
      <h3>Task Details</h3>
      <div class="card mb-4">
        <div class="card-body">
          <p>
            <strong>Title:</strong>
            <%= @task.title %>
          </p>
          <hr>
          <!--
          <p>
            <strong>Start date:</strong>
          </p>
          <hr>
          <p>
            <strong>End date:</strong>
          </p>
          -->
          <p>
            <strong>Description:</strong>
            <%= @task.description %>
          </p>
          <p>
            <strong>status:</strong>
            <%= @task.status %>
          </p>
          <hr>
          <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %> 
          <%= link_to 'Back', tasks_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>


 